<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:contentPadding="15dp"
    card_view:cardCornerRadius="35dp"
    card_view:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/kk" />
        <RelativeLayout
            android:id="@+id/imageView"
            android:layout_toRightOf="@id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/head1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textSize="13sp"
                android:text="Sefako Makgatho Health Sciences University"
                android:textColor="#E87021" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@id/imageView4"
            android:layout_below="@id/imageView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view1"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    card_view:cardBackgroundColor="#E87021"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="1dp"
                    card_view:contentPadding="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:background="#E87021"
                            android:fontFamily="@font/montserrat"
                            android:text="Dates"
                            android:textColor="#ffffff" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>