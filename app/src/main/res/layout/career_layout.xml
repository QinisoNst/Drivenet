<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/kuh">

        <TextView
            android:id="@+id/name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/montserrat"
            android:textColor="#E87021"
            android:textSize="12sp"
            tools:text="Sefako Makgatho Health Sciences University" />

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@id/imageView4">

            <TextView
                android:id="@+id/namea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat"
                android:text="Required APS:"
                android:textColor="#E87021"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/namea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namea1"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat"
                android:text="20-57"
                android:textColor="#E87021"
                android:textSize="20sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/kk"
            />
        <TextView
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageView4"
            android:fontFamily="@font/montserrat"
            android:text="See More"
            android:textColor="#0B1B4D"
            android:textSize="14sp"
            />
    </RelativeLayout>
</RelativeLayout>
