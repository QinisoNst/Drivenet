<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Calculator"
        android:textColor="#E87021"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/line" />

    <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="25dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Programmes"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ImageView"
                    android:fontFamily="@font/montserrat"
                    android:text=""
                    android:textColor="#E87021" />

                <ImageView
                    android:id="@+id/ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="55dp"
                    android:background="@drawable/bookopen" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/simpleExpandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RelativeLayout1"
        android:divider="@null"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/simpleExpandableListView"
            android:layout_alignParentRight="true"
            android:background="@drawable/ompon">

            <TextView
                android:id="@+id/Aps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_toRightOf="@id/number_picker_priority1"
                android:fontFamily="@font/montserrat"
                android:text="600"
                android:textColor="#E87021"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/number_picker_priority1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/montserrat"
                android:text="Required APS"
                android:textColor="#E87021"
                android:textSize="15dp" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/simpleExpandableListView"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ompon">

        <TextView
            android:id="@+id/MyAps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@id/number_picker_priority6"
            android:fontFamily="@font/montserrat"
            android:text="600"
            android:textColor="#E87021"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/number_picker_priority6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/montserrat"
            android:text="My APS"
            android:textColor="#E87021"
            android:textSize="15dp" />

    </RelativeLayout>
        <ExpandableListView
            android:id="@+id/simpleExpandableListView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout4"
            android:divider="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/simpleExpandableListView1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/omont">

            <TextView
                android:id="@+id/University"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/montserrat"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textColor="#E87021"
                android:textColorHighlight="#FFFFFF" />
        </RelativeLayout>

        <ExpandableListView
            android:id="@+id/simpleExpandableListView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout2"
            android:divider="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />




    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        card_view:cardCornerRadius="25dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Spinner
                android:id="@+id/simpleSpinner2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#E87021"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="#E87021"
                android:fontFamily="@font/montserrat"
                android:text="Done"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>